<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:paddingVertical="8dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sort_popular"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Popular"
            android:textAllCaps="false"
            android:textColor="@color/sort_button_text_color"
            android:layout_marginEnd="8dp"
            app:strokeColor="@android:color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/sort_button_background_color"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sort_high_low"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="H-L"
            android:textAllCaps="false"
            android:textColor="@color/sort_button_text_color"
            android:layout_marginEnd="8dp"
            app:strokeColor="@android:color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/sort_button_background_color"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sort_low_high"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="L-H"
            android:textAllCaps="false"
            android:textColor="@color/sort_button_text_color"
            android:layout_marginEnd="8dp"
            app:strokeColor="@android:color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/sort_button_background_color"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sort_a_z"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="A-Z"
            android:textAllCaps="false"
            android:textColor="@color/sort_button_text_color"
            app:strokeColor="@android:color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/sort_button_background_color"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>
</HorizontalScrollView> 